<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ProductsActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="@dimen/ProductIvWidth"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:srcCompat="@drawable/logo2"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_sortCategories"
            android:layout_width="@dimen/ProductBtnSortWidth"
            android:layout_height="@dimen/ProductBtnSortHeight"
            android:layout_weight="1"
            android:fontFamily="@font/alice"
            android:text="@string/sortByName" />

        <ImageButton
            android:id="@+id/ib_1"
            android:layout_width="@dimen/ProductImageBtnWidth"
            android:layout_height="@dimen/ProductImageBtnHeight"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            app:srcCompat="@drawable/ic_baseline_dehaze_24"
            tools:ignore="ContentDescription,VectorDrawableCompat"
            tools:targetApi="lollipop" />

        <ImageButton
            android:id="@+id/ib_2"
            android:layout_width="@dimen/ProductImageBtnWidth"
            android:layout_height="@dimen/ProductImageBtnHeight"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            app:srcCompat="@drawable/ic_baseline_view_list_24"
            tools:ignore="ContentDescription,VectorDrawableCompat"
            tools:targetApi="lollipop" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_products"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>